{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": { "type": "string" },
      "type": { "type": "string" },
      "orbit": {
        "type": "object",
        "properties": {
          "around": { "type": "string" },
          "semi_major_axis_au": { "type": "number" },
          "orbital_period_days": { "type": "number" }
        },
        "required": ["around", "semi_major_axis_au", "orbital_period_days"]
      },
      "physical": {
        "type": "object",
        "properties": {
          "mean_radius_km": { "type": "number" },
          "mass_kg": { "type": "number" },
          "gravity_m_s2": { "type": "number" }
        },
        "required": ["mean_radius_km", "mass_kg", "gravity_m_s2"]
      },
      "atmosphere": {
        "type": "array",
        "items": { "type": "string" }
      },
      "satellites": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "type": { "type": "string" },
            "mean_radius_km": { "type": "number" },
            "discovery": { "type": "string" }
          },
          "required": ["name", "type", "mean_radius_km", "discovery"]
        }
      },
      "discovery": {
        "type": "object",
        "properties": {
          "discovered_by": { "type": "string" },
          "year": { "type": "number" }
        },
        "required": ["discovered_by"]
      }
    },
    "required": [
      "name", "type", "orbit", "physical",
      "atmosphere", "satellites", "discovery"
    ]
  }
}