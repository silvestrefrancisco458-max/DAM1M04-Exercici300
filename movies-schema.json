{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "title": { "type": "string" },
      "release_year": { "type": "integer" },
      "release_date": { "type": "string", "format": "date" },
      "director": { "type": "string" },
      "runtime_min": { "type": "integer" },
      "genres": { "type": "array", "items": { "type": "string" } },
      "countries": { "type": "array", "items": { "type": "string" } },
      "languages": { "type": "array", "items": { "type": "string" } },
      "box_office_usd": { "type": "number" },
      "cast": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "actor": { "type": "string" },
            "role": { "type": "string" }
          },
          "required": ["actor", "role"]
        }
      },
      "soundtrack_by": { "type": "string" },
      "awards": {
        "type": "object",
        "properties": {
          "oscars": { "type": "integer" },
          "bafta": { "type": "integer" }
        },
        "required": ["oscars", "bafta"]
      },
      "ratings": {
        "type": "object",
        "properties": {
          "imdb": { "type": "number" },
          "metacritic": { "type": "number" }
        },
        "required": ["imdb", "metacritic"]
      }
    },
    "required": [
      "title",
      "release_year",
      "release_date",
      "director",
      "runtime_min",
      "genres",
      "countries",
      "languages",
      "box_office_usd",
      "cast",
      "soundtrack_by",
      "awards",
      "ratings"
    ]
  }
}
