{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "common_name": { "type": "string" },
      "scientific_name": { "type": "string" },
      "continent": { "type": "string" },
      "native_range": {
        "type": "object",
        "properties": {
          "countries": { "type": "array", "items": { "type": "string" } },
          "biomes": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["countries", "biomes"]
      },
      "plant_type": { "type": "string" },
      "average_height_m": { "type": "number" },
      "conservation_status": { "type": "string" },
      "traits": {
        "type": "object",
        "properties": {
          "leaf_type": { "type": "string" },
          "notable_features": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["leaf_type", "notable_features"]
      },
      "ecological_role": { "type": "array", "items": { "type": "string" } },
      "human_uses": { "type": "array", "items": { "type": "string" } }
    },
    "required": [
      "common_name",
      "scientific_name",
      "continent",
      "native_range",
      "plant_type",
      "average_height_m",
      "conservation_status",
      "traits"
    ]
  }
}